{
  "extends": "@astriel-division/ts-config",
  "compilerOptions": {
    "baseUrl": "..",
    "outDir": "./dist/",
    "paths": {
      "#apex/phoenix": ["phoenix/src/index"],
      "#apex/phoenix/*": ["phoenix/src/*"],
      "#types": ["phoenix/src/@types/index"]
    },
		"importHelpers": false,
    "noEmitHelpers": false,
		"importsNotUsedAsValues": "preserve",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "../phoenix/**/*.ts",
    "../phoenix/src/config.json",
    "./src/*.ts"
  ], 
  "exclude": []
}
